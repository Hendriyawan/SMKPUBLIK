<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <com.yinglan.shadowimageview.ShadowImageView
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_200sdp"
        app:shadowColor="@android:color/darker_gray"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_32sdp"
        android:layout_gravity="center_horizontal"
        app:shadowRound="@dimen/_4sdp"
        app:shadowSrc="@drawable/image_slide_3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="@string/absensi_siswa"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:gravity="center"
        android:text="@string/absensi_siswa_ini_menggunakan_finger_dan_tidak_khawatir_lagi_bagi_para_wali_murid_untuk_mengontrol_lehadiran_anak_secara_online"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#4B4C68"
        android:textStyle="bold" />

</LinearLayout>